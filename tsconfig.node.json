{
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        /*alias*/
        "baseUrl": ".",
        "paths": {
            "@pages/*": [
                "src/pages/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@lib/*": [
                "src/lib/*"
            ],
            "@layout/*": [
                "src/layout/*"
            ],
            "@contexts/*": [
                "src/contexts/*"
            ],
            "@router/*": [
                "src/router/*"
            ],
            "@/*": [
                "src/*"
            ],
        },
    },
    "include": [
        "/**/*.ts",
        "/**/*.tsx",
        "vite.config.ts"
    ],
    "exclude": [
        "coverage",
        "node_modules",
        "dist",
    ],
}