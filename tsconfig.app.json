{
    "compileOnSave": true,
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "pretty": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        /*alias*/
        "baseUrl": ".",
        "paths": {
            "@pages/*": [
                "./src/pages/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@assets/*": [
                "./src/assets/*"
            ],
            "@styles/*": [
                "./src/styles/*"
            ],
            "@/*": [
                "./src/*"
            ],
        },
    },
    "include": [
        "src",
        ".eslintrc",
        ".prettierrc",
        "vite.config.ts",
        "jest.config.json",
        "jest.setup.mts",
        "_tests_",
    ],
    "exclude": ["node_modules", "dist"]
}